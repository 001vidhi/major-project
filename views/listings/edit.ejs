<% layout("/layout/boilerplate.ejs") %>
<div class="row ">
    <div class="col-8 mt-3 offset-2">
    <h3>Edit your details</h3>
    <form method="post" action="/listings/<%= listings._id %>?_method=PUT">

        <div class="md-3 col-8">
            <label for="title" class="form-label">title</label>
<input name="listing[title]" value ="<%= listings.title %>"  type=" text" class="form-control">
        </div>

<div class="md-3 col-8">
    <label for="description" class="form-label">Description</label>
<textarea name="listing[description]" class="form-control" ><%= listings.description %></textarea>
</div>

<div class="md-3 col-8">
    <label for="image" class="form-label">image URL/link</label>
<input name="listing[image]" value="<%= listings.image %>" class="form-control">
</div>

<div class="row">

<div class="md-3 col-md-4">
    <label for="price" class="form-label">Price</label>
<input name="listing[price]" value="<%= listings.price %>" type="number" class="form-control">
</div>


<div class="md-3 col-md-8">
    <label for="country" class="form-label">country</label>
    <input name="listing[country]" value="<%= listings.country %>" type="text" class="form-control">
</div>
</div>

<div class="md-3 col-8">
    <label for="location" class="form-label">location</label>
<input name="listing[location]" value="<%= listings.location %>" type="text" class="form-control">
</div>

<button class="btn-btn-dark edit-btn mt-3">submit</button>
    </form>

</div>
</div>