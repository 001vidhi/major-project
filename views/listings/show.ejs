<% layout("/layout/boilerplate.ejs") %>
<div class="row mt-3">
<div class="col-8 offset-3" >
    <b><h3>Listing Details:</h3></b>
</div>
<br>
    <div class="card col-6 show-card offset-3">
            <img src="<%= listings.image %>" class="card-img-top show-image" alt="listing_image"/>
            <div class="card-body">
              <p class="card-text"><b><%= listings.title %></b><br/>
                <%= listings.description %><br/>
                <!-- &#8377; <%=  listings.price.toLocaleString("en-IN")%><br> -->
                &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
                <%= listings.country %><br>
                <%= listings.location %>
            </p></div>
          </div>
    </div>
    <br/>
    <div class="btns">
        <a href ="/listings/<%= listings._id%>/edit" class="btn btn-dark col-1 offset-3  edit-btn">Edit</a>
        <form method="POST" action ="/listings/<%= listings._id%>?_method=DELETE">
         <button  class="btn btn-dark offset-5" >Delete</button>
        </form> 
    </div>

