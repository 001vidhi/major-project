<% layout("/layout/boilerplate.ejs") %>

    <div class="row mt-3"> 
        <div class="col-8 offset-2">
            <br>
    <h3>Create a New Listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation"/>
       
<div class="md-3">
    <label for="title" class="form-label">Title</label>
    <input name="listing[title]" 
    placeholder="Add a catchy title" 
    type=" text" 
    class="form-control"
    required />
    <div class="valid-feedback">
         title Looks good!
</div>
</div> 
<div class="md-3">
    <label for="description" class="form-label">Description</label>
    <textarea name="listing[description]"
     placeholder="enter description" 
    type="text" class="form-control" required ></textarea>
</div>
<div class="md-3">
    <label for="image" class="form-label">Image</label>
    <input name="listing[image]"
     placeholder="enter image URL/link" 
     type="text"class="form-control" />
</div>
<div class="row">
<div class="md-3 col-4">
    <label for="price" class="form-label">Price</label>
    <input name="listing[price]"
     placeholder="1200"
       class="form-control" required/>
       <div class="invalid-feedback">Please enter valid price</div>
</div>

<div class="md-3 col-8">
    <label for="country" class="form-label">country</label>
    <input name="listing[country]" 
    placeholder="india" 
    type="text" class="form-control" required/>
</div>
</div>
<div class="md-3">
    <label for="location" class="form-label">location</label>
    <input name="listing[location]" 
    placeholder="nagpur,maharashtra"
     type="text" class="form-control" required />
</div>
<br>


<button type="submit" class="btn btn-primary add-btn mt-3">submit</button>
<br>
<br>
    </form>
</div>
</div>

